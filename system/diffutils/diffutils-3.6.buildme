SRC_URL="http://ftp.gnu.org/gnu/${PACKAGE}/${PACKAGE}-${VERSION}.tar.xz"
MD5_SUM="07cf286672ced26fba54cd0313bdc071"
STABILITY="x86_64"

BDEPEND="
	toolchain/glibc
	system/gettext
	system/intltool
"

simple_setup(){
src_conf    --prefix=/usr \
	--sysconfdir=/etc \
	--libdir=/usr/lib \
	--includedir=/usr/include \
	--datarootdir=/usr/share \
	--libexecdir=/usr/libexec
}

simple_compile(){
src_make
}

simple_install(){
install_dist install
}
