SRC_URL="ftp://ftp.astron.com/pub/${PACKAGE}/${PACKAGE}-${VERSION}.tar.gz"
MD5_SUM="319627d20c9658eae85b056115b8c90a"
STABILITY="x86_64"

BDEPEND="
	toolchain/glibc
	system/zlib
"

simple_setup() {
src_conf    --prefix=/usr \
	--libexecdir=/usr/libexec \
	--sysconfdir=/etc \
	--libdir=/usr/lib \
	--includedir=/usr/include \
	--datarootdir=/usr/share \
	--enable-zlib
}

simple_compile() {
src_make
}

simple_install() {
install_dist install
}
