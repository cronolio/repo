SRC_URL="https://ftp.gnu.org/gnu/${PACKAGE}/${PACKAGE}-${VERSION}.tar.xz"
MD5_SUM="feca7b3e7c7f4aab2b42ecbfc513b070"
STABILITY="x86_64"

BDEPEND="
	toolchain/glibc
	system/pcre
"

simple_setup(){
src_conf    --prefix=/usr \
	--libexecdir=/usr/libexec \
	--sysconfdir=/etc \
	--libdir=/usr/lib \
	--includedir=/usr/include \
	--datarootdir=/usr/share \
	--enable-threads=posix \
	--enable-perl-regexp
}

simple_compile(){
src_make
}

simple_install(){
install_dist install
}
