SRC_URL="http://ftp.gnu.org/gnu/${PACKAGE}/${PACKAGE}-${VERSION}.tar.xz"
MD5_SUM="e0c583d4c380059abd818cd540fe6938"
STABILITY="x86_64"

BDEPEND="
	toolchain/glibc
	perl/perl
"


simple_setup(){
src_conf    --prefix=/usr \
        --libexecdir=/usr/libexec \
        --sysconfdir=/etc \
        --libdir=/usr/lib \
        --includedir=/usr/include \
        --datarootdir=/usr/share \
	--bindir=/bin \
	--without-selinux \
	--disable-acl \
	--enable-threads=posix
}

simple_compile(){
src_make
}

simple_install(){
install_dist install
}
