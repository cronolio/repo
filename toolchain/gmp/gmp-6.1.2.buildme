SRC_URL="http://ftp.gnu.org/gnu/${PACKAGE}/${PACKAGE}-${VERSION}.tar.xz"
MD5_SUM="f58fa8001d60c4c77595fbbb62b63c1d"
STABILITY="x86_64"

# also depend on gcc
BDEPEND="
    toolchain/glibc
"

simple_setup(){
src_conf    --prefix=/usr \
	--libexecdir=/usr/libexec \
	--sysconfdir=/etc \
	--libdir=/usr/lib \
	--includedir=/usr/include \
	--datarootdir=/usr/share \
	--enable-cxx \
	--disable-static
}

simple_compile(){
src_make
}

simple_install(){
install_dist install
}
