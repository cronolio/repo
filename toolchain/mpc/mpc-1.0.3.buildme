SRC_URL="https://ftp.gnu.org/gnu/${PACKAGE}/${PACKAGE}-${VERSION}.tar.gz"
MD5_SUM="d6a1d5f8ddea3abd2cc3e98f58352d26"
STABILITY="x86_64"

BDEPEND="
	toolchain/glibc
	toolchain/gmp
	toolchain/mpfr
"

simple_setup(){
src_conf    --prefix=/usr \
	--libexecdir=/usr/libexec \
	--sysconfdir=/etc \
	--libdir=/usr/lib \
	--includedir=/usr/include \
	--datarootdir=/usr/share \
	--disable-static
}

simple_compile(){
src_make
}

simple_install(){
install_dist install
}
