SRC_URL="https://www.mpfr.org/${PACKAGE}-${VERSION}/${PACKAGE}-${VERSION}.tar.xz"
MD5_SUM="c4ac246cf9795a4491e7766002cd528f"
STABILITY="x86_64"

BDEPEND="
	toolchain/glibc
	toolchain/gmp
"

simple_setup(){
src_conf    --prefix=/usr \
	--libexecdir=/usr/libexec \
	--sysconfdir=/etc \
	--libdir=/usr/lib \
	--includedir=/usr/include \
	--datarootdir=/usr/share \
	--disable-static \
	--enable-thread-safe
}

simple_compile(){
src_make
}

simple_install(){
install_dist install
}
